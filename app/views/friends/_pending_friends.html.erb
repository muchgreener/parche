<% unless @user.pending_friends.empty? %>
<% @user.pending_friends.each do |u| %>
<%= u.firstName %> <%= u.lastName %>
Since <%= u.created_at.to_s(:long) %>
<%= link_to '[Accept]', user_friend_path(:user_id => @user.id, :id => u), :method => :put, :confirm => 'Accept friend request! Are you sure?' %> |
<%= link_to '[Reject]', user_friend_path(:user_id => @user.id, :id => u), :method => :delete, :confirm => 'Reject friend request! Are you sure?' %>
<% end %>
<% else %>
None
<% end %>