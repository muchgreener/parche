<!DOCTYPE html>
<html>
<head>
  <title>Cheepar</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="#">
              Cheepar
            </a>
        	<%- if !current_user.nil? %>
            <ul class="nav">
              	<li class="active"><a href="<%= root_url%>">Home</a></li>
              	<li class="dropdown"> 
					<a href="#"
                      class="dropdown-toggle"
                      data-toggle="dropdown">
                      User
                      <b class="caret"></b>
                	</a>
                	<ul class="dropdown-menu">
						<li><%=link_to "Users", checkins_path %></li>
						<li><%=link_to "Friendships", friendships_path %></li>
                	</ul>
				</li>
				<li class="dropdown"> 
					<a href="#"
                      class="dropdown-toggle"
                      data-toggle="dropdown">
                      Product
                      <b class="caret"></b>
                	</a>
                	<ul class="dropdown-menu">
						<li><%=link_to "Products", products_path %></li>
                	</ul>
				</li>			
				<li class="dropdown"> 
					<a href="#"
                      class="dropdown-toggle"
                      data-toggle="dropdown">
                      Category
                      <b class="caret"></b>
                	</a>
                	<ul class="dropdown-menu">
						<li><%=link_to "Categories", categories_path %></li>
						<li><%=link_to "Category Products", category_products_path %></li>
                	</ul>
				</li>
				<li class="dropdown"> 
					<a href="#"
                      class="dropdown-toggle"
                      data-toggle="dropdown">
                      Venue
                      <b class="caret"></b>
                	</a>
                	<ul class="dropdown-menu">
						<li><%=link_to "Venues", venues_path %></li>
						<li> <%=link_to "Venue Products", venue_products_path %></li>
						<li><%=link_to "Items", items_path %>	</li>
                	</ul>
				</li>
				<li class="dropdown"> 
					<a href="#"
                      class="dropdown-toggle"
                      data-toggle="dropdown">
                      Cheep-in
                      <b class="caret"></b>
                	</a>
                	<ul class="dropdown-menu">
						<li><%=link_to "Checkins", checkins_path %></li>
						<li><%=link_to "Comments", comments_path %></li>
                	</ul>
				</li>
			</ul>        	
            <ul class="nav pull-right">
              <li class="dropdown">
                <a href="#"
                      class="dropdown-toggle"
                      data-toggle="dropdown">
                      Profile
                      <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="#">change password</a></li>
                    <li class="divider"></li>
                    <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
                </ul>
              </li>
            </ul>
            <%- end -%>
        </div>
      </div>
	</div>
	
	<div class="container">
	    <%- if !notice.nil? or !alert.nil? -%>
		    <div class="alert alert-block">
			 	<a class="close" data-dismiss="alert">Ã—</a>
				 <%= notice %>
				 <%= alert %>
			</div>
		<%- end -%>
		
		<%= yield %>
	<div>

</div>	
<!-- <%= debug(params) if Rails.env.development? %> -->
</body>
</html>
