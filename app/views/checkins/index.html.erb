<h3>Listing checkins</h3>

<table class="table table-striped table-condensed">
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Item</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @checkins.each do |checkin| %>
  <tr>
    <td><%= checkin.id %></td>
    <td><%= checkin.user_id %></td>
    <td><%= checkin.item_id %></td>
    <td><%= link_to 'Show', checkin %></td>
    <td><%= link_to 'Show Item', item_path(checkin.item_id) %></td>
    <td><%= link_to 'Edit', edit_checkin_path(checkin) %></td>
    <td><%= link_to 'Destroy', checkin, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

